<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SelectableDigit">
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="ColorText">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">1.6</item>
    </style>

    <style name="ColorText.Digit">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:theme">@style/SelectableDigit</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">1.6</item>
    </style>

    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <!-- Customize your theme here. -->
        <item name="android:layout_marginBottom">@dimen/margin_inner_child</item>
        <item name="android:layout_marginEnd">@dimen/activity_margin_vertical</item>
        <item name="android:layout_marginStart">@dimen/activity_margin_vertical</item>
        <item name="android:layout_marginTop">@dimen/margin_inner_child</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

</resources>