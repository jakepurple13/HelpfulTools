<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <com.programmersbox.funutils.views.CheckBoxGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        app:checkGroupChildInnerMargin="5dp"
        app:checkGroupHeaderBackgroundColor="@color/colorPrimary"
        app:checkGroupHeaderMaxLines="1"
        app:checkGroupHeaderTextAppearance="?android:attr/textAppearanceLarge"
        app:checkGroupHeaderTextColor="@android:color/holo_red_dark"
        app:checkGroupHeaderTextSize="26sp"
        app:checkGroupHeaderTitle="asdf"
        app:isCheckGroupHeaderEnabled="true">

        <CheckBox
            style="@style/CheckBoxStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdf" />

        <com.google.android.material.checkbox.MaterialCheckBox
            style="@style/CheckBoxStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdf" />

        <androidx.appcompat.widget.AppCompatCheckBox
            style="@style/CheckBoxStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdf" />

    </com.programmersbox.funutils.views.CheckBoxGroup>

</LinearLayout>