<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomViewActivity">

    <com.programmersbox.funutils.views.DiamondLoader
        android:id="@+id/loading"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        app:emptyColor="@color/cardview_dark_background"
        app:lineWidth="30dp"
        app:progress="50"
        app:progressColor="#029345"
        app:src="@drawable/ace1"
        tools:src="@tools:sample/avatars" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loading"
        android:layout_centerHorizontal="true"
        android:text="Start" />

    <Button
        android:id="@+id/batteryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startButton"
        android:layout_centerHorizontal="true"
        android:text="Battery" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_below="@id/batteryButton"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/progressSlider"
        android:layout_below="@id/progressBar"
        android:layout_centerHorizontal="true"
        android:min="0"
        android:max="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>